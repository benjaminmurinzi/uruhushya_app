# ============================================
node_modules/
npm-debug.log
yarn-error.log

# ============================================
# PHP SPECIFIC
# ============================================
*.cache
.phpunit.result.cache

# ============================================
# SESSION & RUNTIME
# ============================================
/sessions/*
!sessions/.gitkeep